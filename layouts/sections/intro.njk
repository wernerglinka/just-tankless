{% from "../partials/text.njk" import text %}
{% from "../partials/ctas.njk" import ctas %}

<section class="section-intro {% if params.paddingTop %}paddingTop{% endif %} {% if params.paddingBottom %}paddingBottom{% endif %} {% if params.text.twoCol === true %}two-columns{% endif %}">
  <div class="content">
    {% set info = params %}
    {{ text(info.text) }}

    {% if info.hasCtas %}
        {{ ctas(info.ctas) }}
      {% endif %}
  </div>
</section>
